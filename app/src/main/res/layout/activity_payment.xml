<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#ebecf0"
        android:gravity="center_vertical">

        <!-- App Title/Logo -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/routematePayment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:gravity="start|center_vertical" />

        <!-- Settings/Menu Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/settings"
            android:contentDescription="@string/settingsPayment"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Main Content Area with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topHeader"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp">

                    <!-- Header -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_to_pay"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/font"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_your_mobile_payment_app_to_scan_the_code_below"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <!-- QR Code -->
                    <ImageView
                        android:id="@+id/ivQrCode"
                        android:layout_width="256dp"
                        android:layout_height="256dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/qr_code_for_payment"
                        android:src="@drawable/qr_code"/>

                    <!-- Payment Details -->
                    <TextView
                        android:id="@+id/tvPayingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_are_paying"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs_1500"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/font"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/for_a_monthly_pass"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <!-- Button -->
                    <Button
                        android:id="@+id/btnPaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/i_have_paid"
                        android:backgroundTint="@color/buttons"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:textSize="16sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#ebecf0"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/labelHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homePayment"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/labelProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilePayment"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Notifications Tab -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconNotifications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notification"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/labelNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alertsPayment"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Packages Tab -->
        <LinearLayout
            android:id="@+id/navPackages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconPackages"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pack"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/labelPackages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/packagesPayment"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>


        <!-- SOS Tab -->
        <LinearLayout
            android:id="@+id/navSOS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconSOS"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/alert"
                app:tint="#d32f2f" />

            <TextView
                android:id="@+id/labelSOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sosPayment"
                android:textSize="12sp"
                android:textColor="#d32f2f"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>